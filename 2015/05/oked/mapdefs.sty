\def\scotland{%
  \node[circle, draw, minimum height=0.7cm] (scotland) at (3,0.8) {};%
  \begin{scope}
    \clip (8, 2) circle (2cm);
    \node at (8, 2) {\includegraphics[height=4cm]{scotland.jpg}};
  \end{scope}
  \node[circle, minimum height=4cm] (scotmap) at (8, 2) {};%
  \draw (scotland.north) edge (scotmap.north west);
  \draw (scotland.south) edge (scotmap.south);
}

